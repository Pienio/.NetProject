        <Label x:Name="label1" Content="Nowe hasło:" HorizontalAlignment="Left" Height="27" Margin="10,69,0,0" VerticalAlignment="Top" Width="79"/>
        <Label x:Name="label2" Content="Powtórz nowe&#xD;&#xA; hasło:" HorizontalAlignment="Left" Height="42" Margin="10,96,0,0" VerticalAlignment="Top" Width="79"/>
        <PasswordBox x:Name="sh" HorizontalAlignment="Left" Margin="94,37,0,0" VerticalAlignment="Top" Width="190" Height="27"/>
        <PasswordBox x:Name="nh" HorizontalAlignment="Left" Margin="94,69,0,0" VerticalAlignment="Top" Width="190" Height="27"/>
        <PasswordBox x:Name="nh1" HorizontalAlignment="Left" Margin="94,112,0,0" VerticalAlignment="Top" Width="190" Height="26"/>
        <Button x:Name="button" Content="Akceptuj" HorizontalAlignment="Left" Margin="14,214,0,0" VerticalAlignment="Top" Width="102" Height="39" Click="button_Click"/>
        <Button x:Name="button1" Content="Anuluj" HorizontalAlignment="Left" Margin="177,214,0,0" VerticalAlignment="Top" Width="107" Height="39" Click="button1_Click"/>

    </Grid>
</Window>
