<Window x:Class="Visits.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Visits"
        mc:Ignorable="d"
        Title="MainWindow" Height="445.385" Width="678.462">
    <DockPanel>
        <Menu x:Name="menu" DockPanel.Dock="Top" Height="23">
            <Menu.ItemsPanel>
                <ItemsPanelTemplate>
                    <DockPanel/>
                </ItemsPanelTemplate>
            </Menu.ItemsPanel>
            <MenuItem Header="Zaloguj się"/>
        </Menu>
        <DockPanel DockPanel.Dock="Top" Margin="10,10,10,0">
            <TabControl DockPanel.Dock="Top" Height="125">
                <TabItem Header="Wyszukaj po specjalizacji">
                    <StackPanel Margin="10">
                        <TextBlock Text="Wybierz specjalizację:"/>
                        <ComboBox Margin="0,5,350,0"/>
                    </StackPanel>
                </TabItem>
                <TabItem Header="Wyszukaj po lekarzu">
                    <StackPanel Margin="10">
                        <TextBlock Text="Wypisz nazwisko lekarza:"/>
                        <TextBox Margin="0,5,350,0" Height="22"/>
                    </StackPanel>
                </TabItem>
            </TabControl>
            <Button Content="Szukaj" Height="24"/>
        </DockPanel>
        <GroupBox x:Name="groupBox" Header="Wyniki wyszukiwania" Margin="10,5,10,10"/>
    </DockPanel>
</Window>
