<Window x:Class="Visits.Login"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Visits"
        mc:Ignorable="d" ResizeMode="NoResize"
        Title="Zaloguj" Height="182.255" Width="319">
    <StackPanel Margin="20">
        <DockPanel>
            <Label x:Name="label" Content="PESEL" Width="60" DockPanel.Dock="Left"/>
            <TextBox x:Name="usr" Height="27"/>
        </DockPanel>
        <DockPanel Margin="0,5,0,0">
            <Label x:Name="label1" Content="Hasło" Width="60" DockPanel.Dock="Left"/>
            <PasswordBox x:Name="password" Height="26"/>
        </DockPanel>
        <Grid Margin="0,15,0,0">
            <Button x:Name="Log" Content="Zaloguj" HorizontalAlignment="Right" Width="90" Height="26" Click="Log_Click"/>
            <Button x:Name="Anul" Content="Anuluj" HorizontalAlignment="Right" Width="90" Height="26" Click="Anul_Click" Margin="0,0,95,0"/>
        </Grid>
    </StackPanel>
</Window>
