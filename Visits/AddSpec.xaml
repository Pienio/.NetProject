<Window x:Class="Visits.AddSpec"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Visits"
        mc:Ignorable="d" ResizeMode="NoResize"
        Title="Nowa specjalizacja" SizeToContent="Height" Width="259.019">
    <StackPanel Margin="10">
        <Label x:Name="label" Content="Podaj nazwę specjalizacji:"/>
        <TextBox x:Name="textBox" Height="23"/>
        <Grid Margin="0,15,0,10">
            <Button x:Name="button" Content="Dodaj" HorizontalAlignment="Right" Width="90" Height="23" Click="button_Click"/>
            <Button x:Name="button1" Content="Anuluj" HorizontalAlignment="Right" Width="90" Height="23" Click="button1_Click" Margin="0,0,95,0"/>
        </Grid>
    </StackPanel>
</Window>
